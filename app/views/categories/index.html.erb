<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.code %></td>
        <td><%= link_to 'Ir', category_subcategories_path(category), class: "btn btn-success text-white" %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: "btn btn-warning text-white" %></td>
        <!--<td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger text-white"%></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

